{
    "name": "MkDocs Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "yzhang.markdown-all-in-one"
            ]
        },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    }
    },
    "postCreateCommand": "pip install mkdocs mkdocs-material mkdocs-git-revision-date-localized-plugin material-plausible-plugin mkdocs-awesome-pages-plugin",
    "remoteUser": "vscode",
    "forwardPorts": [8000],
    "postStartCommand": "mkdocs serve -a 0.0.0.0:8000"
}
